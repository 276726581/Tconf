<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.timogroup.tconf.dao.mapper.ConfigMapper">
    <insert id="save" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into config (id,name,uuid,content) values (#{id},#{name},#{uuid},#{content})
    </insert>
    <update id="update">
        update config set id=id
        <if test="null!=name">
            ,name=#{name}
        </if>
        <if test="null!=content">
            ,content=#{content}
        </if>
        where id=#{id}
    </update>
    <delete id="deleteById">
        delete from config where id=#{id}
    </delete>
    <select id="findById" resultType="com.timogroup.tconf.entity.Config">
        select * from config where id=#{id}
    </select>
    <select id="findByUUID" resultType="com.timogroup.tconf.entity.Config">
        select * from config where uuid=#{uuid}
    </select>
    <select id="findAll" resultType="com.timogroup.tconf.entity.Config">
        select * from config
    </select>
</mapper>